{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "baseUrl": ".",
    "types": [],
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ],
      "@nebular/*": [
        "../node_modules/@nebular/*"
      ],
      "rxjs/*": [
        "../node_modules/rxjs/*"
      ],
      "@admin-fire/*": [
        "libs/*"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts",
    "**/*.e2e-spec.ts",
    "node_modules",
    "tmp",
    "functions"
  ]
}